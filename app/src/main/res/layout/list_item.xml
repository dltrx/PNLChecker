<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="symbol"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_buyExchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_symbol"
            android:maxLines="1"
            android:text="buyExchange"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_sellExchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_buyExchange"
            android:text="sellExchange"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_sellExchange"
            android:text="time"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/text_view_pnl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_time"
            android:text="pnl"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

